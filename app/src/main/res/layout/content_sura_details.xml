<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <include
        android:id="@+id/txt_arabic_sura_title"
        layout="@layout/item_details_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:adjustViewBounds="true"
        android:src="@drawable/img_screen_bottom"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ayas"
        app:layout_constraintTop_toBottomOf="@id/txt_arabic_sura_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:itemCount="50"
        tools:listitem="@layout/item_aya_card"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>